<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorLightGrey">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_blog"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:id="@+id/ll_blog_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_blog_item"
                android:layout_width="116dp"
                android:layout_height="116dp"
                android:layout_margin="@dimen/nav_header_vertical_spacing"
                android:src="@drawable/blogging"
                android:scaleType="centerCrop"
                 />

            <!--<ImageView
                android:id="@+id/iv_blog_item"
                android:layout_width="196dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/nav_header_vertical_spacing"
                app:srcCompat="@drawable/blogging"
                android:scaleType="centerCrop"/>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title_blog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Blog Title"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <!--android:drawableLeft="@drawable/blog_comment"
                    android:drawablePadding="10dp"-->


                <TextView
                    android:id="@+id/tv_blog_written_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Written By Muhammad"
                    android:textSize="21sp"
                    android:textStyle="italic" />
                <!--
                android:drawableLeft="@drawable/blogger"
                android:drawablePadding="10dp"-->


                <TextView
                    android:id="@+id/tv_blog_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="1/2/2018"
                    android:textSize="16sp"
                    android:textStyle="italic" />
                <!--
                android:drawableLeft="@drawable/calendar"
                android:drawablePadding="10dp"-->

                <TextView
                    android:id="@+id/tv_blog_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Detials of Blog"
                    android:textSize="16sp"
                    android:textStyle="italic" />

            </LinearLayout>
            <!--
            android:drawableLeft="@drawable/blog_search"
            android:drawablePadding="10dp"-->
        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>